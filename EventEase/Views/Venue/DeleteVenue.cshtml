@model EventEase.Models.Venue

@{
    ViewData["Title"] = "DeleteVenue";
}

<style>
    body {
    background: linear-gradient(to bottom, #8ee307, #00cffd);
    height: 100vh;
    margin: 0;
    }
</style>

<h1>DeleteVenue</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.venueName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.venueName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.capacity)
        </dd>
        <dt class = "col-sm-2">
            Venue Image
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Imageurl))
            {
                <div class="form-group">
                    <label>Current Image</label><br />
                    <img src="@Model.Imageurl" alt="Venue Image" width="200" height="200" style="object-fit: cover; border-radius: 8px;" />
                </div>
            }
            else
            {
                <span>No Image Available</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-id="@Model.venueId" method="post">
        <input type="hidden" asp-for="venueId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> | @* delete button*@
        <a asp-action="Index" style="background-color: rgb(65, 132, 225); color: rgb(0, 229, 255);">Back to List</a>   @* back to list button  *@
    </form>
</div>
